<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">

      <div class="well well-lg">
        <%= @room.location %>
        <h2 style="text-align: center">Scheduled Meetings  </h2>
      </div>
        <% if @meetings != nil %>
          <table class="table table-striped table-hover ">
            <thead>
              <tr>
                <th>Meeting</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Scheduled by</th>
                <th>Location</th>
              </tr>
            </thead>
            <tbody>
            <% @meetings.each do |meeting| %>
              <tr>
                <td><%= meeting.name %></td>
                <td><%= meeting.start_timestamp %></td>
                <td><%= meeting.end_timestamp %></td>
                <td><%= meeting.room.location %></td>
                <td><%= link_to('Leave a Comment', new_meeting_comment_path(meeting.id), class: "btn btn-primary btn-lg") %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
        <% else %>
          <p>There are no meetings scheduled for this room yet
          </p>
        <% end %>
        <div><%= link_to "Book Now!", new_room_meeting_path(params[:id]) %></div>
    <div class="col-md-3">
    </div>
  </div>
</div>


